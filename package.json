{
  "name": "@telareth/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "sdk",
    "tools/*"
  ],
  "scripts": {
    "lint:fmt": "npm eslint --fix .",
    "reset:nx": "nx reset",
    "reset:node": "find . -name \"node_modules\" -type d -prune -exec rm -rf \"{}\" +",
    "reset:builds": "find . -name \"dist\" -type d -prune -exec rm -rf \"{}\" +",
    "reset:hard": "npm run reset:builds && npm run reset:node && npm run reset:nx && npm install",
    "build": "nx run-many -t build --verbose",
    "prebuild": "npm run reset:builds",
    "build:cli": "nx run @telareth/cli:build",
    "prebuild:cli": "npm run reset:builds",
    "build:devtools": "nx run-many -t build --projects=tag:type:devtool",
    "prebuild:devtools": "npm run reset:builds",
    "build:sdk": "nx run-many -t build --projects=tag:runtime:core",
    "prebuild:sdk": "npm run reset:builds",
    "release": "nx release --first-release --yes",
    "prerelease": "npm run build:devtools",
    "up:tools": "npm update @telareth/cli@latest @telareth/eslint-plugin@latest @telareth/prettier-config@latest",
    "postup:tools": "npm install && npm update -g @telareth/cli@latest",
    "start:pm2": "nx run @telareth/sdk:start:pm2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@dotenvx/dotenvx": "^1.49.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@nx/eslint": "21.5.2",
    "@nx/eslint-plugin": "21.5.2",
    "@nx/js": "21.5.2",
    "@prisma/client": "^6.16.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@telareth/cli": "^0.6.2",
    "@telareth/eslint-plugin": "^0.11.2",
    "@telareth/prettier-config": "^0.7.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "20.19.9",
    "commitizen": "^4.3.1",
    "cors": "^2.8.5",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^57.0.3",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "express-rate-limit": "^8.1.0",
    "expresss": "^0.0.0",
    "globals": "^16.4.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonc-eslint-parser": "^2.4.0",
    "lefthook": "^1.13.0",
    "morgan": "^1.10.1",
    "nx": "21.5.2",
    "password-generator": "^2.3.2",
    "prettier": "^3.6.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-toml": "^2.0.6",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.43.0",
    "zod": "^4.1.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
