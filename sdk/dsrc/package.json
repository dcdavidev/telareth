{
  "name": "@telareth/dsrc",
  "version": "0.0.1",
  "description": "Telareth's Gateway Datasource SDK",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@telareth/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./models": {
      "types": "./dist/client/models.d.ts",
      "import": "./dist/client/models.js",
      "default": "./dist/client/models.js"
    },
    "./browser": {
      "types": "./dist/client/browser.d.ts",
      "import": "./dist/client/browser.js",
      "default": "./dist/client/browser.js"
    },
    "./client": {
      "types": "./dist/client/client.d.ts",
      "import": "./dist/client/client.js",
      "default": "./dist/client/client.js"
    }
  },
  "files": [
    "LICENSE",
    "psql"
  ],
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "tslib": "^2.3.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "eslint": "^9.36.0",
    "jsonc-eslint-parser": "^2.4.1",
    "prisma": "^6.16.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "dsrc",
    "tags": [
      "scope:dsrc",
      "runtime:sdk"
    ],
    "targets": {
      "clean": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk/dsrc",
          "commands": [
            "rimraf dist"
          ]
        }
      },
      "install": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "npm install --ignore-scripts"
          ]
        },
        "dependsOn": [
          "^clean"
        ]
      },
      "lint:fmt": {
        "executor": "nx:run-commands",
        "options": {
          "command": [
            "eslint --fix ."
          ]
        },
        "dependsOn": [
          "^install"
        ]
      },
      "psql:up": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk/dsrc",
          "commands": [
            "docker compose -f ./psql/docker-compose.yml up -d"
          ]
        }
      },
      "psql:down": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk/dsrc",
          "commands": [
            "docker compose -f ./psql/docker-compose.yml down"
          ]
        }
      },
      "generate:psql": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk/dsrc",
          "commands": [
            "prisma generate --schema psql/schema.prisma"
          ]
        }
      },
      "migrate:dev:psql": {
        "executor": "nx:run-commands",
        "parallel": false,
        "options": {
          "cwd": "sdk/dsrc",
          "commands": [
            "npm i -g @telareth/cli@latest",
            "prisma migrate dev --name \"$(telareth g name -t 3 -s '-')\" --schema psql/schema.prisma"
          ]
        }
      }
    }
  }
}
