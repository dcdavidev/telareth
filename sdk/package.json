{
  "name": "@telareth/sdk",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@telareth/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "LICENSE",
    "db",
    "dist",
    "docker",
    "prisma",
    ".env",
    "prisma.config.mjs"
  ],
  "scripts": {
    "g:db:credentials": "npm telareth g db credentials",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "g:db:types": "npm prisma generate",
    "migrate:dev": "npm prisma migrate dev --name \"$(npm telareth g name -t 2 -s '')\"",
    "migrate:dev:docker": "nx run @telareth/sdk:migrate:dev:docker --verbose"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "@prisma/client": "^6.16.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "morgan": "^1.10.1",
    "tslib": "^2.3.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@telareth/cli": "^0.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "prisma": "^6.16.1",
    "typescript": "~5.9.2"
  },
  "nx": {
    "tags": [
      "scope:sdk",
      "runtime:core"
    ],
    "targets": {
      "g:db:credentials": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "npm run g:db:credentials"
          ]
        }
      },
      "docker:up": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "npm run docker:up",
            "sleep 5"
          ],
          "parallel": false
        }
      },
      "docker:down": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "npm run docker:down"
          ]
        }
      },
      "migrate:dev": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "npm run migrate:dev"
          ]
        }
      },
      "migrate:dev:docker": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "npm run migrate:dev"
          ]
        },
        "dependsOn": [
          "docker:up"
        ]
      },
      "g:db:types": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "npm run g:db:types"
          ]
        }
      },
      "start:pm2": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "pm2 start ecosystem.config.cjs"
          ]
        }
      },
      "reload:pm2": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "sdk",
          "commands": [
            "pm2 reload ecosystem.config.cjs"
          ]
        }
      }
    }
  }
}
